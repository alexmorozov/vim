snippet hook_menu "hook_menu()"
/**
 * Implementation of hook_menu()
 */
function `!p snip.rv=snip.basename`_menu() {
  $${1:items} = array();

  $$1['${2:path}'] = array(
    'title' => '${3:title}',
    'page callback' => '${4:drupal_get_form}',
    'page arguments' => array(${5:1}),
    'access arguments' => array('${6:access content}'),
    'type' => ${7:MENU_CALLBACK},
  );

  ${0: // other items}

  return $$1;
}
endsnippet

# Form snippets
snippet textfield "textfield"
$form['${1:element_name}'] = array(
  '#type' => 'textfield',
  '#title' => t('${2:title}'),
  '#description' => t('${3:description}'),
  '#default_value' => ${4:NULL},
);
endsnippet

snippet submit "submit"
$form['${1:submit}'] = array(
  '#type' => 'submit',
  '#value' => t('${2:Submit}'),
);
endsnippet
